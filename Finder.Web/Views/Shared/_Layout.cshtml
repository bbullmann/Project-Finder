@using System
@using System.Web
<!DOCTYPE html>
<html ng-app="TemplateApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<input type="hidden" id="rootPath" value="@HttpContext.Current.Request.ApplicationPath" />
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="#!/" class="navbar-brand">&lt;ApplicationName&gt;</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>
                    <a href="#!Example">Example</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="container body-content">
    <br />
    <div ng-view>
        @RenderBody()
    </div>
    <hr />
    <footer>
        <p>&copy; &lt;CurrentYear&gt; - @DateTime.Now.Year</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/angular");
@Scripts.Render("~/bundles/client");
@RenderSection("scripts", required: false)
</body>
</html>